.container{padding:30rpx;background-color:#f8f3ee;min-height:100vh}.textarea{width:100%;border:2rpx solid #d4b999;padding:24rpx;border-radius:16rpx;height:240rpx;margin-bottom:30rpx;font-size:28rpx;background-color:#f5e9dc;color:#5c3a21;box-sizing:border-box;transition:all .3s ease}.textarea:focus{border-color:#b78d64;background-color:#f0dfc8;box-shadow:0 0 8rpx rgba(139,90,43,.2)}.placeholder-style{color:#a0866d;font-size:28rpx}.upload-area{display:flex;flex-wrap:wrap;gap:20rpx;margin-bottom:40rpx}.upload-item{position:relative;width:220rpx;height:220rpx;border-radius:12rpx;overflow:hidden;box-shadow:0 4rpx 12rpx rgba(0,0,0,.08);transition:transform .3s}.upload-item:active{transform:scale(.95)}.uploaded-image{width:100%;height:100%}.delete-icon{position:absolute;right:8rpx;top:8rpx;width:36rpx;height:36rpx;border-radius:50%;background-color:rgba(0,0,0,.5);display:flex;align-items:center;justify-content:center;z-index:2}.upload-btn{width:220rpx;height:220rpx;border:2rpx dashed #d4b999;border-radius:12rpx;display:flex;flex-direction:column;align-items:center;justify-content:center;background-color:rgba(245,233,220,.5);transition:all .3s}.upload-btn:active{background-color:rgba(240,223,200,.7)}.upload-btn .upload-tip{font-size:24rpx;color:#8b5a2b;margin-top:10rpx}.button-group{display:flex;gap:30rpx;margin-top:60rpx}.button-group button{flex:1;height:80rpx;line-height:80rpx;font-size:32rpx;border-radius:40rpx;transition:all .3s;border:none}.submit-btn{background:linear-gradient(145deg,tan,#b8860b);color:#5c3a21;font-weight:700;box-shadow:0 4rpx 8rpx rgba(139,90,43,.2)}.submit-btn[disabled]{background:#e6d5b8;color:#5c3a21;opacity:.7}.submit-btn:not([disabled]):active{background:linear-gradient(145deg,#b8860b,tan);transform:scale(.98)}.cancel-btn{background-color:#f8f3ee;color:#8b5a2b;border:1rpx solid #d4b999}.cancel-btn:active{background-color:#f0e5d8}
